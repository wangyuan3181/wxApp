page {
	height: 100%;
	background: #b3d4db;
}

.container {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.user-img {
	width: 180rpx;
	height: 180rpx;
	margin-top: 140rpx;
}

.user-name {
	margin-top: 70rpx;
	font-size: 32rpx;
	font-weight: bold;
	text-align: center;
}

.moto-container {
	margin-top: 140rpx;
	border: 1px solid #405f70;
	width: 300rpx;
	height: 80rpx;
	border-radius: 5px;
	text-align: center;
}

.moto {
	font-size: 28rpx;
	font-weight: bold;
	line-height: 80rpx;
	color: #405f70;
}